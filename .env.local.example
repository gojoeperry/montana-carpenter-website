# Environment Configuration Example
# Copy this file to .env.local and fill in your actual values

# Site Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Google Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your_google_site_verification_code

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here

# Email Services (choose one)
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email Configuration
CONTACT_EMAIL_TO=info@montanafinishcarpenter.com
CONTACT_EMAIL_FROM=noreply@montanafinishcarpenter.com

# Security & API Protection
API_SECRET_KEY=your_secret_key_for_api_protection
FORM_HONEYPOT_FIELD_NAME=website_url

# Database (if applicable)
DATABASE_URL=your_database_connection_string
DATABASE_NAME=montana_carpenter

# Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=montana-carpenter

# Social Media & Business
NEXT_PUBLIC_FACEBOOK_PAGE=https://facebook.com/your-page
NEXT_PUBLIC_INSTAGRAM_HANDLE=your_instagram_handle
NEXT_PUBLIC_BUSINESS_PHONE=+14065550123

# Local Development
NODE_ENV=development
ANALYZE=false

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=10
RATE_LIMIT_WINDOW_MS=900000

# Security Headers
NEXT_PUBLIC_CSP_NONCE=generate_random_nonce_in_production